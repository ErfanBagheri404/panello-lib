{
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJS",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "moduleResolution": "node",
    "types": ["node"],
    "typeRoots": ["./node_modules/@types", "src/types"]
  },
  "include": ["src/**/*.ts", "src/types/**/*"],
  "exclude": ["node_modules"]
}
